<h1> User Login</h1>
<%flash[:notice]%>

<%= form_with model: @user, url:'/login_user' do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div>
  <%= form.label :password %><br>
  <%= form.text_area :password %>
  </div>


  <div>
    <%= form.submit :login%>
  </div>
  <%= link_to "User Register", controller: :employees, action: :new%>
<% end %>
